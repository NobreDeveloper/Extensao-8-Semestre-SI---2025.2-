generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Papel {
  ADMIN
  PRODUTOR
}

model Usuario {
  id Int @id @default(autoincrement())
  email String @unique @db.VarChar(255)
  senha String @db.VarChar(255)
  nome String @db.VarChar(255)
  papel Papel @default(PRODUTOR)

  produtor Produtor? // ? indica q Ã© opcional   
  
  postagem Postagem[] // [] indica a relacao de 1 para muitos 1-n

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("usuario")
}

model Produtor {
  id Int @id @default(autoincrement())
  nome String @db.VarChar(255)
  biografia String?
  foto_perfil String @db.VarChar(255)
  contato_whatsapp String @db.VarChar(20)
  contato_email String? @db.VarChar(255)

  userId Int @unique
  usuario Usuario @relation(fields: [userId], references: [id], onDelete: Cascade) // onDelete:Cascade -> Exclui tudo referente ao usuario caso deletado 

  produtos Produto[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("produtor")
}

model Produto {
  id Int @id @default(autoincrement())
  nome String @db.VarChar(255)
  descricao String
  foto_produto String @db.VarChar(255)

  produtorId Int
  produtor Produtor @relation(fields: [produtorId], references: [id], onDelete: Cascade) 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("produto")
}

model Postagem {
  id Int @id @default(autoincrement())
  titulo String @db.VarChar(255)
  conteudo String
  data_publicacao DateTime @default(now())

  autorId Int
  usuario Usuario @relation(fields: [autorId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("postagem")
}
